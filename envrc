#!/usr/bin/env bash
set -e

################################################################################
# Common .envrc - see ~/.direnvrc and `man direnv-stdlib`
################################################################################

# auto-switch rubies
use chruby --auto

# add ~/bin folder to PATH
PATH_add ~/bin

# overmind config
export OVERMIND_IGNORED_PROCESSES=release
export OVERMIND_AUTO_RESTART=web,worker

# ensure aws-vault uses login keychain
export AWS_VAULT_KEYCHAIN_NAME=login
