#!/bin/sh

# brew
brew install neofetch    # neofetch - https://github.com/dylanaraps/neofetch
brew install xctool      # xctool - http://nshipster.com/xctool/
brew install asciinema   # asciicinema - https://asciinema.erg
brew install bat         # bat, like cat - https://github.com/sharkdp/bat
brew install prettyping  # https://github.com/denilsonsa/prettyping
brew install htop        # http://hisham.hm/htop/
brew install httpie      # https://httpie.org
brew cask install ngrok  # ngrok - https://ngrok.com
brew install direnv      # direnv - https://direnv.net
brew install terminal-notifier # terminal-notifier - https://github.com/julienXX/terminal-notifier
brew install hexyl        # https://github.com/sharkdp/hexyl
brew install tig          # https://jonas.github.io/tig/
brew install github/gh/gh # https://cli.github.com
brew install overmind     # https://github.com/DarthSim/overmind

# node
npm install -g tldr # http://tldr.sh
